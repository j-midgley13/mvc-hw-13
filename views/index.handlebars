<div class="container">
    <header>
        <h1>Burger Imagination!</h1>
        <br>
        <img src="../assets/img/cheeseburger4.png" alt="cheeseburger">    
        <br>
    </header>

    <div class="row d-flex justify-content-center enterBurger">
        <div class="col-md-10 BurgerForm d-flex justify-content-center text-center borderController">
            <form class="newBurgerForm">
                <h4>Enter in your inspiration for a new burger!</h4>
                <input type="text" class="form control" name="create-burger" id="create-burger">
                <button type="submit" class="btn btn-lg" id="submit-btn">Add Your Burger!</button>
            </form>
        </div>
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-md-7 d-flex justify-content-center borderController notConsumedBox">
            <div id="notConsumed" >
            <h4>Let's Eat!</h4>
                {{#each burger_data }}
                    {{#unless this.devoured}}
                        <div class="list-item">
                        <span class="burger-id">{{this.id}}</span>
                        <span>:</span>
                        <span class="burger-name-text">{{this.burger_name}}</span>
                        <button type="button" class="devour">Consume!</button>
                        <br>
                        </div>
                    {{/unless}}
                {{/each}}
            </div>
        </div>

        <div class="col-md-1">
            
        </div>

        <div class="col-md-4 d-flex justify-content-center borderController consumedBox">
            <div id="consumed">
            <h4>Consumed!</h4>
                {{#each burger_data }}
                    {{#if this.devoured}}
                        <div class="list-item">
                        <span class="burger-id">{{this.id}}</span>
                        <span>:</span>
                        <span class="burger-name-text">{{this.burger_name}}</span>
                        <br>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>   
</div>


